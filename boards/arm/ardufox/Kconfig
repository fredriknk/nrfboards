config BOARD_ARDUFOX
	# The GPIO driver is required by this board's initialization code
	# (board.c), so it is forced here to be enabled always, not only
	# enabled by default (in defconfig).
	select GPIO if BOARD_ARDUFOX_NRF52840

if BOARD_ARDUFOX_NRF52840

config BOARD_ENABLE_DCDC
	bool "DCDC mode"
	select SOC_DCDC_NRF52X
	default y

module = BOARD_ARDUFOX
module-str = Board Control
source "subsys/logging/Kconfig.template.log_config"

endif # BOARD_ARDUFOX_NRF52840
